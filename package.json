{
  "name": "agriconnect-workspace",
  "version": "1.0.0",
  "description": "AgriConnect - Plateforme NumÃ©rique Agricole (Web + Mobile)",
  "private": true,
  "workspaces": [
    "web",
    "mobile"
  ],
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:all": "npm run build:web && npm run build:mobile",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:all": "npm run lint:web && npm run lint:mobile",
    "install:all": "npm install && cd web && npm install && cd ../mobile && npm install",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:reset": "npx supabase db reset",
    "supabase:status": "npx supabase status",
    "db:migrate": "npx supabase db push",
    "db:reset": "npx supabase db reset",
    "db:seed": "npx supabase db reset --seed-file seed.sql",
    "setup": "npm run install:all && npm run supabase:start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "agriculture",
    "senegal",
    "react-native",
    "react",
    "supabase",
    "mobile-app",
    "web-app"
  ],
  "author": "AgriConnect Team",
  "license": "MIT"
}
